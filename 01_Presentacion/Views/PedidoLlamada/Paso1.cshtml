@model _03_Dominio.entPedido

@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/MasterPages/MasterIntranet.cshtml";
}

<h2>Nuevo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                <div>
                    <label class="control-label col-md-1">Buscar Cliente: </label>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" placeholder="Ingrese cliente a buscar" id="buscarCliente">
                </div>
            </div>
        </div>

    </div>

    <div id="detalle">

    </div>
}

<div>
    @Html.ActionLink("Cancelar", "Main")
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            muestra();
        });

        $('#buscarCliente').keyup(function () {
            muestra();
        });

        var muestra = function () {
            $('#detalle').load('@Url.Action("BusquedaCliente")', { Nombre: $('#buscarCliente').val() })
        }
    </script>
}