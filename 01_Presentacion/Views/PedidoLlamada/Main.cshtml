
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/MasterPages/MasterIntranet.cshtml";
}

<h2>Pedido llamada</h2>

<div class="form-group">
    <div class="row">
        <div class="col-lg-3">
            <select class="form-control" id="estado">
                <option value="Registrado">Registrado</option>
                <option value="Reparto">Anulado</option>
                @*<option value="Finalizado">Pagado</option>*@
            </select>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3">
            <input type="text" id="Nombre" class="form-control" placeholder="Buscar cliente">
        </div>
    </div>
</div>
<br />

<p>
    <a href="@Url.Action("NuevoPedido","PedidoLlamada")" class="btn btn-primary">Nuevo Pedido</a>
</p>

<div id="detalle">

</div>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            muestra();
        });

        $('#Nombre').keyup(function () {
            muestra();
        });

        $('#estado').change(function () {
            muestra();
        });

        var muestra = function () {
            $('#detalle').load('@Url.Action("DetalleMain")', { estado: $('#estado').val(), nombre: $('#Nombre').val() })
        }
    </script>
}